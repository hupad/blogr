<%= simple_form_for @blog, url: blogs_path, html: {multipart: true} do |f| %>

	<div class="container">

		<div class="page-header">
			<h1>New Blog</h1>
		</div>

		<div class="panel panel-default">
			<div class="panel-body">
				<div class="form-group">
					<%= f.input :name %>
				</div>

				<div class="form-group">
					<%= f.input :url_slug %>
				</div>

				<div class="form-group">
					<%= f.input :cover_image %>
				</div>

				<div>
					<%= f.submit 'Create', class: 'btn btn-lg btn-primary' %>
				</div>
			</div>
		</div>

	</div>

<% end %>
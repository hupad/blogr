<div class="page-header">
	<div class="page-body">
		<div class="page-header">
			<h1>
				List of Blogs
			</h1>
			<p><%= link_to "Create Blog", blogs_new_path , class: "btn btn-primary btn-lg" %>
		</div>

			<ul class="list-group">
				<% @blogs.each do |blog| %>
					<li class="list-group-item">
						<h2>
							<%= link_to blog.name, posts_path(slug: blog.url_slug) %>
						</h2>
						<p>
							<b>Blogger: </b> <%= blog.url_slug %>
						</p>
					</li>
				<% end %>
			</ul>
		</div>
</div>